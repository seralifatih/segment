<Window x:Class="Segment.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Segment"
        Height="540"
        Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5"
        MinHeight="500"
        MinWidth="480"
        MaxHeight="720">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#8A2BE2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7B1FA2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6A1B9A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Welcome to Segment"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,24"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="âŒ¨ï¸" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Top"/>
                        <StackPanel>
                            <TextBlock Text="Activate" FontSize="16" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock FontSize="14" Foreground="#444444" TextWrapping="Wrap">
                                <Run>Press </Run>
                                <Run FontWeight="Bold">Ctrl + Space</Run>
                                <Run> to activate the assistant.</Run>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ§ " FontSize="24" Margin="0,0,15,0" VerticalAlignment="Top"/>
                        <StackPanel>
                            <TextBlock Text="Workflow" FontSize="16" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock FontSize="14" Foreground="#444444" TextWrapping="Wrap">
                                <Run>Copy text, let AI translate, fix it, and I'll learn.</Run>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‚" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Top"/>
                        <StackPanel>
                            <TextBlock Text="Data" FontSize="16" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock FontSize="14" Foreground="#444444" TextWrapping="Wrap">
                                <Run>Import your TMX files in Settings.</Run>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="2"
                Content="Start Segment"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Center"
                Margin="0,30,0,0"
                Click="Button_Click"/>
    </Grid>
</Window>
