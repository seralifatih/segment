<Window x:Class="Segment.App.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Segment"
        Height="620"
        Width="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5"
        MinHeight="560"
        MinWidth="500"
        MaxHeight="760">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#8A2BE2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7B1FA2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6A1B9A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Welcome to Segment"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#333333"
                       HorizontalAlignment="Center"/>
            <Border HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    CornerRadius="12"
                    Background="#E3F2FD"
                    Padding="10,4">
                <TextBlock x:Name="LaunchPhaseBadgeText"
                           Text="Phase: Phase0Readiness"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#0D47A1"/>
            </Border>
        </Grid>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="10">
                    <TextBlock Text="Legal Launch Qualification"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Role" FontSize="13" FontWeight="SemiBold" Foreground="#444444"/>
                    <ComboBox x:Name="RoleCombo" Margin="0,4,0,12" Height="32">
                        <ComboBoxItem Content="Freelancer"/>
                        <ComboBoxItem Content="Agency"/>
                        <ComboBoxItem Content="Enterprise"/>
                    </ComboBox>

                    <TextBlock Text="Domain Focus" FontSize="13" FontWeight="SemiBold" Foreground="#444444"/>
                    <TextBox x:Name="DomainFocusBox" Margin="0,4,0,12" Height="32" Text="Legal translation"/>

                    <TextBlock Text="Weekly Legal Volume Estimate" FontSize="13" FontWeight="SemiBold" Foreground="#444444"/>
                    <TextBox x:Name="WeeklyVolumeBox" Margin="0,4,0,12" Height="32" Text="30"/>

                    <TextBlock Text="Confidentiality Requirement" FontSize="13" FontWeight="SemiBold" Foreground="#444444"/>
                    <ComboBox x:Name="ConfidentialityCombo" Margin="0,4,0,12" Height="32">
                        <ComboBoxItem Content="Standard"/>
                        <ComboBoxItem Content="High"/>
                        <ComboBoxItem Content="Strict"/>
                    </ComboBox>

                    <CheckBox x:Name="GlossaryIntentBox"
                              Margin="0,2,0,12"
                              Content="I plan to use glossary/terminology controls regularly"
                              IsChecked="True"/>

                    <Border Background="#F4F8FF" BorderBrush="#D7E3FF" BorderThickness="1" CornerRadius="6" Padding="10">
                        <TextBlock x:Name="DecisionText"
                                   Text="Complete onboarding details to get qualified for current launch phase."
                                   TextWrapping="Wrap"
                                   Foreground="#1A237E"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="2"
                Content="Submit &amp; Start"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Center"
                Margin="0,30,0,0"
                Click="StartButton_Click"/>
    </Grid>
</Window>
