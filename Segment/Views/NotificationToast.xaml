<Window x:Class="Segment.App.Views.NotificationToast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NotificationToast" Height="120" Width="320"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True"
        ShowActivated="False"
        WindowStartupLocation="Manual">

    <Border CornerRadius="10" Background="#252526" BorderBrush="#3E3E42" BorderThickness="1"
            Padding="12" MouseLeftButtonUp="Toast_Click">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="✨ New Term Detected" Foreground="#FFD700" FontWeight="Bold" FontSize="12"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock x:Name="OldTermText" Foreground="#CCCCCC" FontSize="13"/>
                <TextBlock Text="  ➜  " Foreground="#888888" FontSize="13"/>
                <TextBlock x:Name="NewTermText" Foreground="#4CC2FF" FontSize="13" FontWeight="SemiBold"/>
            </StackPanel>

            <TextBlock Grid.Row="2" Text="Click to review and save" Foreground="#666666" FontSize="10" Margin="0,8,0,0"/>
        </Grid>
    </Border>
</Window>
