<Window x:Class="Segment.App.Views.FloatingPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Segment" Height="400" Width="600"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="12" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="InputText" 
                     Grid.Row="0" 
                     Height="60"
                     Background="Transparent"
                     Foreground="#E0E0E0"
                     CaretBrush="#4CC2FF"
                     BorderThickness="0"
                     FontFamily="Segoe UI"
                     FontSize="15"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     KeyDown="InputText_KeyDown"
                     SelectionBrush="#4CC2FF"
                     SelectionOpacity="0.4"/>

            <Border Grid.Row="1" Height="1" Background="#333333" Margin="0,10,0,10"/>

            <TextBox x:Name="OutputText" 
                     Grid.Row="2" 
                     Background="Transparent"
                     Foreground="#4CC2FF"
                     BorderThickness="0"
                     FontFamily="Segoe UI Semibold"
                     FontSize="16"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     KeyDown="OutputText_KeyDown"
                     VerticalScrollBarVisibility="Auto"
                     SelectionBrush="#E0E0E0"
                     SelectionOpacity="0.4"/>

            <Border x:Name="TermPanel" Grid.Row="3" Margin="0,15,0,5" 
                    Background="#252526" CornerRadius="6" BorderBrush="#3E3E42" BorderThickness="1"
                    Visibility="Collapsed">
                <StackPanel Margin="10">
                    <TextBlock Text="TERMINOLOGY" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>

                    <ItemsControl x:Name="TermList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Source}" Foreground="#CCCCCC" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text=" → " Foreground="#888888" FontSize="12"/>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Target}" Foreground="#4CC2FF" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text=" ✔" Foreground="#4CC2FF" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border x:Name="GuardrailIssuePanel" Grid.Row="4" Margin="0,8,0,5"
                    Background="#2B1E1E" CornerRadius="6" BorderBrush="#6D4C41" BorderThickness="1"
                    Visibility="Collapsed">
                <StackPanel Margin="10">
                    <TextBlock Text="VALIDATION ISSUES" Foreground="#FFAB91" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="GuardrailActionHintText"
                               Text="[R] Review issues | [A] Apply anyway"
                               Foreground="#FFCCBC"
                               FontSize="10"
                               Margin="0,0,0,5"
                               Visibility="Collapsed"/>
                    <ItemsControl x:Name="GuardrailIssueList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,2,0,4" Padding="6" Background="#3A2424" CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding RuleId}" Foreground="#FFCCBC" FontSize="10" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Message}" Foreground="#F5F5F5" TextWrapping="Wrap" FontSize="11" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding SuggestedFix}" Foreground="#B0BEC5" TextWrapping="Wrap" FontSize="10" Margin="0,3,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <Button Content="Apply Quick Fix"
                                                    Tag="{Binding}"
                                                    Click="ApplyQuickFix_Click"
                                                    Width="100"
                                                    Height="24"
                                                    Margin="0,0,8,0"
                                                    Background="#455A64"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Cursor="Hand"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                        <Button x:Name="ApplyWarningsAnywayButton"
                                Content="Apply Anyway"
                                Click="ApplyWarningsAnyway_Click"
                                Width="110"
                                Height="26"
                                Margin="0,0,8,0"
                                Background="#455A64"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Visibility="Collapsed"/>
                        <Button x:Name="OverrideBlockedIssuesButton"
                                Content="Override With Reason"
                                Click="OverrideBlockedIssues_Click"
                                Width="140"
                                Height="26"
                                Background="#8E2424"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Row="5" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">

                    <Button x:Name="SettingsButton" 
                            Content="⚙️" 
                            ToolTip="Settings"
                            Background="Transparent" 
                            Foreground="#555555" 
                            BorderThickness="0" 
                            Cursor="Hand" 
                            Click="SettingsButton_Click"
                            Width="30" Height="30"
                            FontSize="16"
                            VerticalAlignment="Center"/>

                    <ToggleButton x:Name="FreezeButton"
                                  Click="FreezeButton_Click"
                                  Width="30" Height="30"
                                  Margin="5,0,0,0"
                                  Background="Transparent" 
                                  BorderThickness="0"
                                  Cursor="Hand"
                                  ToolTip="Freeze Learning (Stop popup for this project)">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                    <TextBlock x:Name="Icon" 
                                               Text="❄️" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="14"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#33007ACC"/>
                                        <Setter TargetName="Icon" Property="Foreground" Value="#4CC2FF"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                        <Setter TargetName="Icon" Property="Foreground" Value="#444444"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Icon" Property="Foreground" Value="#AAAAAA"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <Button x:Name="UndoSafePasteButton"
                            Content="Undo Paste"
                            Click="UndoSafePaste_Click"
                            Width="85"
                            Height="24"
                            Margin="8,0,0,0"
                            Background="#37474F"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Project:" 
                               Foreground="#666666" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>

                    <ComboBox x:Name="ProfileCombo" 
                              Height="22" 
                              FontSize="11" 
                              Width="120"
                              Background="Transparent" 
                              BorderThickness="0"
                              IsEditable="True"
                              IsReadOnly="False"
                              KeyUp="ProfileCombo_KeyUp"
                              DropDownClosed="ProfileCombo_DropDownClosed"
                              ToolTip="Type to create/switch project"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border CornerRadius="10" Background="#455A64" Padding="8,3" Margin="0,0,8,0">
                        <TextBlock x:Name="WorkflowStateText"
                                   Text="State: Captured"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <Border CornerRadius="10" Background="#283593" Padding="8,3" Margin="0,0,8,0">
                        <TextBlock x:Name="ActiveDomainBadgeText"
                                   Text="Domain: Legal"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <Border CornerRadius="10" Background="#00695C" Padding="8,3" Margin="0,0,10,0">
                        <TextBlock x:Name="GlossaryScopeBadgeText"
                                   Text="Scope: Project+Global"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <Border CornerRadius="10" Background="#1B5E20" Padding="8,3" Margin="0,0,10,0">
                        <TextBlock x:Name="LaunchPhaseBadgeText"
                                   Text="Phase: Phase0Readiness"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock x:Name="ConfidentialityRouteText"
                               Text="Mode: Standard | Route: Google"
                               Foreground="#B0BEC5"
                               FontSize="10"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="LatencySummaryText"
                               Text="Latency p50/p95: n/a"
                               Foreground="#B0BEC5"
                               FontSize="10"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="LatencyWarningText"
                               Text=""
                               Foreground="#FFAB91"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                    <TextBlock Text="[Space] Apply to clipboard | [Ctrl+Shift+Space] In-place (configurable)" Foreground="#555555" FontSize="11" Margin="0,0,15,0"/>
                    <TextBlock Text="[Esc] Cancel" Foreground="#555555" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
