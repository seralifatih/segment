<Window x:Class="Segment.App.Views.LearningWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Learning" Height="220" Width="380"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="Manual">

    <Border CornerRadius="12" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="✨ New Terminology" Foreground="#FFD700" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="ProjectNameText" Text="(Project)" Foreground="#666666" FontSize="12" Margin="8,2,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <Grid Grid.Row="1" VerticalAlignment="Center" Margin="0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="SourceLangLabel" Text="Source" Foreground="#808080" FontSize="10" Margin="2,0,0,5" FontWeight="SemiBold"/>
                    <Border Background="#2D2D30" CornerRadius="6" Padding="5">
                        <TextBox x:Name="OldTermBox" 
                                 Text="Sign" 
                                 Background="Transparent" 
                                 Foreground="#E0E0E0" 
                                 BorderThickness="0"
                                 FontSize="13"
                                 FontWeight="Normal"
                                 HorizontalContentAlignment="Center"/>
                    </Border>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="➜" Foreground="#FFD700" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0"/>

                <StackPanel Grid.Column="2">
                    <TextBlock x:Name="TargetLangLabel" Text="Target" Foreground="#808080" FontSize="10" Margin="2,0,0,5" FontWeight="SemiBold"/>
                    <Border Background="#2D2D30" CornerRadius="6" Padding="5" BorderBrush="#007ACC" BorderThickness="1">
                        <TextBox x:Name="NewTermBox" 
                                 Text="Mühürle" 
                                 Background="Transparent" 
                                 Foreground="#4CC2FF" 
                                 BorderThickness="0"
                                 FontSize="13"
                                 FontWeight="Bold"
                                 HorizontalContentAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Save Scope:" Foreground="#555555" FontSize="9" Margin="0,0,0,3"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ScopeProject" Content="Project" GroupName="Scope" IsChecked="True" Foreground="#AAAAAA" FontSize="11" Margin="0,0,10,0" Cursor="Hand"/>
                        <RadioButton x:Name="ScopeGlobal" Content="Global" GroupName="Scope" Foreground="#FFD700" FontSize="11" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Ignore" Click="Ignore_Click" 
                            Width="70" Height="28" 
                            Background="Transparent" Foreground="#888888" 
                            BorderThickness="0" Cursor="Hand" FontSize="12">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Save Rule" Click="Save_Click" 
                            Width="80" Height="28" Margin="10,0,0,0" 
                            Background="#007ACC" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" FontSize="12">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>